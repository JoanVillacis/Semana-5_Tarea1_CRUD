namespace _02_CRUD.Controladores
{
    using _02_CRUD.Config;
    using _02_CRUD.Modelos;
    using System.Linq;

    public class Auth_Controller
    {
        private readonly sqlServer_dbcontext _Auth_Dbcontext = new sqlServer_dbcontext();

        public Usuario_Model login1(Login_Model login)
        {
            if (login == null) return null;
            if (string.IsNullOrWhiteSpace(login.Correo_Usuario) || string.IsNullOrWhiteSpace(login.contrasenia))
                return null;

            try
            {
                // Buscar usuario por correo y contraseña, y que esté activo
                var usuario = _Auth_Dbcontext.Usuarios
                    .FirstOrDefault(u => u.Correo_Usuario == login.Correo_Usuario
                    && u.Contrasenia == login.contrasenia
                    && u.Estado_Usuario == true);

                return usuario;
            }
            catch
            {
                // Mantener estilo simple del proyecto: en caso de error, retornar null
                return null;
            }
        }

        public Usuario_Model login2(Login_Model login)
        {
            if (login == null) return null;
            if (string.IsNullOrWhiteSpace(login.Correo_Usuario) || string.IsNullOrWhiteSpace(login.contrasenia))
                return null;

            try
            {
                // Buscar usuario por correo y estado activo
                var usuario = _Auth_Dbcontext.Usuarios
                    .FirstOrDefault(u => u.Correo_Usuario == login.Correo_Usuario
                    && u.Estado_Usuario == true);

                if (usuario == null) return null;

                // Comparar contraseña en memoria
                if (usuario.Contrasenia == login.contrasenia)
                {
                    return usuario;
                }

                return null;
            }
            catch
            {
                return null;
            }
        }

        public bool VerificaCedula(char[] validarCedula)
        {
            // Validaciones mínimas para evitar excepciones
            if (validarCedula == null || validarCedula.Length < 10)
                return false;

            for (int i = 0; i < 10; i++)
            {
                if (!char.IsDigit(validarCedula[i]))
                    return false;
            }

            int aux = 0, par = 0, impar = 0, verifi;
            for (int i = 0; i < 9; i += 2)
            {
                aux = 2 * int.Parse(validarCedula[i].ToString());
                if (aux > 9)
                    aux -= 9;
                par += aux;
            }
            for (int i = 1; i < 9; i += 2)
            {
                impar += int.Parse(validarCedula[i].ToString());
            }

            aux = par + impar;
            if (aux % 10 != 0)
            {
                verifi = 10 - (aux % 10);
            }
            else
                verifi = 0;
            if (verifi == int.Parse(validarCedula[9].ToString()))
                return true;
            else
                return false;
        }
    }
}
