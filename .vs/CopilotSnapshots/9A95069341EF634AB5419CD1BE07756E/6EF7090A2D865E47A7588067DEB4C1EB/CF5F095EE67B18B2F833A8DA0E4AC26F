using _02_CRUD.Controladores;
using _02_CRUD.Modelos;
using _02_CRUD.Vistas.Usuarios;
namespace _02_CRUD.Vistas.Clientes
{
    public partial class frm_agregar_cliente : Form
    {
        private readonly Auth_Controller _auth_Controller = new Auth_Controller();
        private readonly Cliente_Controller _clientes_Controller = new Cliente_Controller();
        public frm_agregar_cliente()
        {
            InitializeComponent();
        }

        private void btn_Guardar_Click(object sender, EventArgs e)
        {
            if (!validaciones())
            {
                MessageBox.Show("Complete los campos para guardar el usuario");
                return;
            }
            if (!validacion_cedula())
            {
                MessageBox.Show("La cedula ingresada no es correcta");
                return;
            }
            var cliente = new ClienteModel
            {
                Apellidos = txt_Apellidos.Text.Trim(),
                Nombres = txt_Nombres.Text.Trim(),
                RUC = txt_Cedula.Text.Trim(),
                Direccion = txt_Dirrecion.Text.Trim(),
                Correo = txt_Correo.Text.Trim(),
                Telefono = txt_Telefono.Text.Trim(),
                Estado = chb_Estado.Checked == true,
            };
            var nuevo_cliente = _clientes_Controller.insetar(cliente);

            if (nuevo_cliente != "ok")
            {
                MessageBox.Show(nuevo_cliente);
            }
            else
            {
                MessageBox.Show("Cliente insertado con exito");
                limpiar_cajas();
                var frm_lista = new frm_lista_clientes();
                frm_lista.Show();
                this.Close();
            }
        }
        public void limpiar_cajas()
        {
            txt_Apellidos.Text = "";
            txt_Nombres.Text = "";
            txt_Cedula.Text = string.Empty;
            txt_Correo.Text = "";
            txt_Dirrecion.Text = "";
            txt_Telefono.Text = "";
            chb_Estado.Checked = false;
        }
        public bool validaciones()
        {
            if (txt_Apellidos.Text.Trim() == "" || txt_Cedula.Text.Trim() == ""
                || txt_Dirrecion.Text.Trim() == "" || txt_Telefono.Text.Trim() == ""
                || txt_Nombres.Text.Trim() == "" || txt_Correo.Text.Trim() == "")
            {
                return false;
            }
            else
            {
                return true;
            }

        }

        public bool validacion_cedula()
        {
            if (txt_Cedula.Text.Length != 10)
            {
                MessageBox.Show("La cedula ingresada no contiene 10 caracteres");
                return false;
            }
            bool validacion = _auth_Controller.VerificaCedula(txt_Cedula.Text.ToCharArray());
            if (!validacion)
            {
                MessageBox.Show("Cédula inválida. Por favor, ingrese una cédula correcta.");
                txt_Cedula.Text = "";
                txt_Cedula.Focus();
                return false;
            }
            return true;
        }

        private void btn_Cancelar_Click(object sender, EventArgs e)
        {
            limpiar_cajas();
        }

        private void btn_Salir_Click(object sender, EventArgs e)
        {
            this.Close();
        }
    }
}
